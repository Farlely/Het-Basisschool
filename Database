SET FOREIGN_KEY_CHECKS = 0;
DROP TABLE IF EXISTS `Docent`;
DROP TABLE IF EXISTS `Groep`;
DROP TABLE IF EXISTS `Leerling`;
SET FOREIGN_KEY_CHECKS = 1;

CREATE TABLE `Docent` (
    `DocentCode` INTEGER(8) NOT NULL,
    `Naam` VARCHAR(30) NOT NULL,
    `Achternaam` VARCHAR(30) NOT NULL,
    `Wachtwoord` VARCHAR(12) NOT NULL,
    `GroepCode` VARCHAR(5) NOT NULL,
    PRIMARY KEY (`DocentCode`)
);

CREATE TABLE `Groep` (
    `GroepCode` VARCHAR(5) NOT NULL,
    `DocentCoder` INTEGER(8) NOT NULL,
    `LeerlingNummer` INTEGER(8) NOT NULL,
    PRIMARY KEY (`GroepCode`, `DocentCoder`, `LeerlingNummer`)
);

CREATE TABLE `Leerling` (
    `LeerlingNummer` INTEGER(8) NOT NULL,
    `Naam` VARCHAR(30) NOT NULL,
    `Achternaam` VARCHAR(30) NOT NULL,
    `GroepCode` VARCHAR(5) NOT NULL,
    `Wachtwoord` VARCHAR(12) NOT NULL,
    PRIMARY KEY (`LeerlingNummer`)
);
